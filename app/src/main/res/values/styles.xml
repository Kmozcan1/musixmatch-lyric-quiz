<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:windowBackground">@color/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="bottomNavigationStyle">@style/BottomNavigationStyle</item>

        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <item name="toolbarStyle">@style/ActionBarStyle</item>

        <item name="circularProgressIndicatorStyle">@style/CircularProgressStyle</item>

    </style>

    <!--Cold splash screen-->
    <style name="AppTheme.Launcher">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_logo_drawable</item>
    </style>

    <!--Bottom nav bar styles-->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.BottomNavigationStyle</item>
    </style>
    <style name="ThemeOverlay.BottomNavigationStyle" parent="">
        <item name="colorPrimary">@color/bottomNavBackground</item>
    </style>

    <!--Action bar styles-->
    <style name="ActionBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/lightRed</item>
    </style>

    <!--Button styles-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--TextView style-->
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--ProgressBar style-->
    <style name="CircularProgressStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">20dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
</resources>