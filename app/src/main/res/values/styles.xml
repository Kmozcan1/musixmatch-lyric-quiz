<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightRed</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:windowBackground">@color/colorOnPrimary</item>
    </style>
    <style name="ToolBarStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorOnPrimary</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    <style name="AppTheme.Launcher">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_logo_drawable</item>
    </style>
</resources>